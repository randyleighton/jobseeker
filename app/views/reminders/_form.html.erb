<%= render 'layouts/errors', object: @reminder %>

<%= form_for [@context, @reminder], html: { class: 'form-horizontal' } do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id  %>
  <div class="form-group">
    <%= f.label :subject, class: "col-xs-12 col-sm-3" %>
    <div class="col-xs-12 col-sm-8">
      <%= f.text_area :subject, class: "form-control", placeholder: "Enter a reminder here." %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Reminder Due", class: "col-xs-12 col-sm-3" %>
    <div class="col-xs-5 col-sm-5">
      <%= f.date_field :due_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-9">
      <%= button_tag(type: "submit", class: "btn btn-default float-btn", title: f.object.new_record? ? "Create Reminder" : "Update Reminder") do %>
        <i class="fa fa-plus-circle fa-fw"></i>
        <%= f.object.new_record? ? "Create Reminder" : "Update Reminder" %>
      <% end %>
      <%= link_to "<i class='fa fa-arrow-circle-left fa-fw'></i> Cancel".html_safe, company_path(@company), class: "btn btn-default float-btn", title: "Cancel" %>
    </div>
  </div>

<% end %>
