<%= form_for [@context, @reminder] do |f| %>
  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_area :subject, class: "form-control", placeholder: "Enter a reminder here.", rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label "Reminder Due", :due_date %>
    <%= f.date_field :due_date, class: "form-control" %>
  </div>


  <%= f.submit class: "btn btn-primary" %>
<% end %>