<div class="nested-fields">

  <div class="form-group">
    <%= f.label :description, "Account Type", class: 'col-sm-3 control-label' %>
    <div class="input-group col-xs-12 col-sm-7">
      <span class="input-group-addon"><i class="fa fa-globe fa-fw form-fa"></i></span>
      <%= f.text_field :description, placeholder: "Linkedin, facebook, twitter, etc", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :info, "Account Info", class: 'col-sm-3 control-label' %>
    <div class="input-group col-xs-12 col-sm-7">
      <span class="input-group-addon"><i class="fa fa-list fa-fw form-fa"></i></span>
    <%= f.text_field :info, placeholder: "Linkedin URL, facebook name, twitter, etc", class: 'form-control' %>
    </div>
  </div>

  <%= link_to_remove_association 'Remove this Social account', f %>

</div>