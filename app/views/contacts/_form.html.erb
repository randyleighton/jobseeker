<%= render 'layouts/errors', object: @contact %>

<%= form_for(([@contact.company, @contact]), html: { class: 'form-horizontal' }) do |f| %>

  <div class="form-group">
    <%= f.label "First Name", class: 'col-sm-3 control-label' %>
    <div class="col-sm-8">
    <%= f.text_field :first_name, class: 'form-control', :autofocus=>true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Last Name", class: 'col-sm-3 control-label' %>
    <div class="col-sm-8">
    <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Title", class: 'col-sm-3 control-label' %>
    <div class="col-sm-8">
    <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Email", class: 'col-sm-3 control-label' %>
    <div class="col-sm-8">
    <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Cell Phone", class: 'col-sm-3 control-label' %>
    <div class="col-sm-8">
    <%= f.text_field :cell_phone, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Work Phone", class: 'col-sm-3 control-label' %>
    <div class="col-sm-8">
    <%= f.text_field :work_phone, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-8">
      <%= f.submit(:class => "btn btn-default") %>
    </div>
  </div>

<% end %>