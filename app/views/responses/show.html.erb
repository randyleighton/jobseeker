<% content_for(:title, "Job Response") %>

<div class="row col-pads">
  <h4>Response Details</h4>
  <p><b>Company: </b><%= link_to "#{@company.name}", company_path(@company) %></p>
  <p><b>Job: </b><%=link_to "#{@job.description}", job_path(@job) %></p>
  <p><b>Response Date: </b><%= @response.response_date %></p>
  <p><b>Notes: </b><%=@response.notes %></p>
</div>

<div class="row col-pads">
  <div class="show-edit-del">
    <%= link_to job_response_path(@job,@response), data: {method: :delete, confirm: "Are you sure you want to delete this response for the #{@job.description} job?" } do %>
      <%= image_tag("trash-holiday.png") %>
      <p>Delete</p>
    <% end %>
  </div>
  <div class="show-edit-del">
  <%= link_to company_job_path(@company, @job) do %>
    <%= image_tag("navigation.png") %>
     <p>Back</p>
  <% end %>
  </div>
</div>