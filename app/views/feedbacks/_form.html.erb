<%= render 'layouts/errors', object: @feedback %>

<%= simple_form_for @feedback do |f| %>

  <% if current_user %>
   <%= f.hidden_field :user_id, value: current_user.id %>
  <% else %>
    <% f.fields_for :user do |u| %>
      <div class="form-group">
        <%= u.label :username, "Your Name", class: "col-xs-12" %>
        <div class="col-xs-9 col-sm-6">
          <%= u.text_field :username, class: "form-control" %>    
        </div>
      </div>
        <div class="form-group">
        <%= u.label :email, "Your Email", class: "col-xs-12" %>
        <%= u.text_field :email, class: "form-control" %>    
        <div class="col-xs-9 col-sm-6">
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label "Subject", :subject, class: "col-xs-12" %>
    <div class="col-xs-9 col-sm-6">
      <%= f.text_field :subject, class: "form-control" %>    
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Body", :body, class: "col-xs-12" %>
    <div class="col-xs-12 col-sm-9">
      <%= f.text_area :body, size:"100%x8%", class: "form-control" %>    
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12 feedback-submit">
      <%= render 'layouts/submit', form_type: "Feedback", object: @feedback, f: f %>
    </div>
  </div>

<% end %>

