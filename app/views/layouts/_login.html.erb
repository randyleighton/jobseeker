<div class="auth-buttons">
  <% if user_signed_in? %>

    <div class="nav-format logged-in hidden-sm">
      <% if current_user.username %>
        Logged in as <strong><span class="logged-in-name"><%= current_user.username %></span></strong>.
      <% else %>
        Logged in as <strong><span class="logged-in-name"><%= current_user.email %></span></strong>.
      <% end %>
    </div>

    <div class="nav-format">
      <%= link_to "Edit Profile", edit_user_registration_path, id: "edit-prof", class: "btn btn-default navbar-btn" %>
    </div>

    <div class="nav-format">
      <%= link_to "Logout", destroy_user_session_path, :method=> :delete, id: "logout-prof", class: "btn btn-default navbar-btn" %>
    </div>

  <% else %>
    <div class="nav-format">
      <%= link_to "Sign Up", new_user_registration_path, id: "signup-prof", class: "btn btn-default navbar-btn" %>
    </div>

    <div class="nav-format">
      <%= link_to "Login", new_user_session_path, id: "login-prof", class: "btn btn-default navbar-btn" %>
    </div>

    <div class="nav-format">
      <%= link_to "Home", root_path, id: "home-page", class: "btn btn-default navbar-btn" %>
    </div>

  <% end %>
</div>