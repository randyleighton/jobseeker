<%= render 'layouts/errors', object: @interview %>

<%= form_for(@interview, html: { class: 'form-horizontal' }, url: job_interviews_path(@job, @interview)) do |f| %>
  <% if !@interview.interview_date %>
    <div class="form-group">
        <%= f.label "Interview Date", class: "col-sm-2"%>
      <div class="col-sm-6">
        <%= f.date_field :interview_date, :autofocus=>true, class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label "Interview Notes", class: "col-sm-2"%>
    <div class="col-sm-6">
      <%= f.text_area :notes, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label "Primary Interview Contact", class: "col-sm-2"%>
    <div class="col-sm-6">
      <%= f.collection_select :contact_id, @company.contacts, :id, :first_name, class: 'form-select' %>
    </div>
  </div>

  <%= f.hidden_field :job_id, :value => @job.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-9">
      <%= f.submit(:class => "btn btn-default float-btn") %>
      <%= link_to "Cancel", :back, class: "btn btn-default float-btn" %>
    </div>
  </div>

<% end %>