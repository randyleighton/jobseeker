<% content_for(:title, "Jobseeker Log In") %>

<div class="border-form-div">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2>Log In</h2>
  <%= f.error_notification %>
    <div class="form-group">
      <%= f.label :email, class: "col-xs-3 control-label" %>
      <div class="col-xs-9">
        <%= f.email_field :email, :autofocus => true, :placeholder => 'email@provider.com', class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-xs-3 control-label" %>
      <div class="col-xs-9">
        <%= f.password_field :password, :placeholder => 'Password with 8 characters', class: "form-control" %>
        <%= f.input :remember_me, :class=>"checkbox", as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
    <div class="form-group">
      <%= f.button :submit, "Log In", :class=>"btn btn-default" %>
    </div>  
  <% end %>
  <%= render "devise/shared/links" %>
</div>