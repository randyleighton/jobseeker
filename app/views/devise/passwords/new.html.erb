<% content_for(:title, "Sign Up") %>

<div class="border-form-div">
  <h2>Forgot your password?</h2>
  <p>This will send you an email to reset your password one time.</p>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-group">
      <%= f.label :email, "Email", class: "col-sm-3 control-label" %>
      <div class="input-group col-sm-6">
      <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw form-fa"></i></span>
      <%= f.email_field :email, required: true, autofocus: true, :placeholder => 'email@provider.com', class: "form-control"  %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9 offset3">
          <%= button_tag :submit, class: "btn btn-default float-btn", title: "Send Reset Instructions" do %>
            <i class="fa fa-external-link fa-fw"></i> Send Reset Instructions
          <% end %>
          <%= link_to '<i class="fa fa-sign-in fa-fw"></i> Log In'.html_safe, new_session_path(resource_name),class: "btn btn-default float-btn", title: "Log In with Existing Account" %>
      </div>
    </div>
  <% end %>
</div>