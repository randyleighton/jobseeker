<%= render 'layouts/errors', object: @job %>

<%= form_for(([@job.company, @job]), html: { class: 'form-horizontal' }) do |f| %>

  <div class="form-group">
    <%= f.label "Description", class: 'col-sm-3 control-label' %>
    <div class="col-sm-8">
    <%= f.text_field :description, class: 'form-control', :autofocus=>true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Location", class: 'col-sm-3 control-label' %>
    <div class="col-sm-8">
    <%= f.text_field :location, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Posting ID", class: 'col-sm-3 control-label' %>
    <div class="col-sm-8">
    <%= f.text_field :posting_number, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-8">
      <%= f.submit(:class => "btn btn-primary") %>
    </div>
  </div>

<% end %>