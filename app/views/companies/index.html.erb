<% content_for(:title, "Companies") %>

<div class="row col-pads">
	<h2>Companies List
	<%= link_to new_company_path, class: "btn btn-adds", title: "Add a new Company" do %>
    <%= content_tag(:i,nil,class: 'fa fa-plus fa-2x')%>
    Add New
  <% end %></h2>
</div>

<div class="row companies-ul">
	<ul class="fa-ul">
	  <% @companies.all.each do |company| %>
	    <li>
        <%= link_to company_path(company) do %>
          <%= company.name %>
          <% if company.reminders.count > 0 %>
            <%= content_tag(:i,nil,class: 'fa-reminder fa fa-bell')%> 
          <% end %>
        <% end %>
      </li>
	  <% end %>
	</ul>
</div>
