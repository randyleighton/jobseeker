<% content_for(:title, "Companies") %>

<div class="index-head">
	<h2>Companies List</h2>
	<%= link_to image_tag("company-icon.png", class: "add-btn", title: "Add a new Company", alt: "Add a new company"), new_company_path %>
</div>

<div class="row companies-ul">
	<ul class="fa-ul">
	  <% @companies.all.each do |company| %>
	    <li>
        <%= link_to company_path(company) do %>
          <%= company.name %>
          <% if company.reminders.count > 0 %>
            <%= content_tag(:i,nil,class: 'fa-reminder fa fa-bell')%> 
          <% end %>
        <% end %>
      </li>
	  <% end %>
	</ul>
</div>
