<%= render 'layouts/errors', object: @company %>

<%= form_for(@company, html: { class: 'form-horizontal' }) do |f| %>

 <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
      <%= f.label "Name", class: "col-sm-2 control-label"%>
    <div class="col-sm-6">
      <%= f.text_field :name, :autofocus=>true, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
      <%= f.label "Website", class: "col-sm-2 control-label"%>
    <div class="col-sm-6">
      <%= f.text_field :url, placeholder: "Enter the website address",class: 'form-control' %>
    </div>
  </div>  

  <div class="form-group">
      <%= f.label :"Comments", class: "col-sm-2 control-label"%>
    <div class="col-sm-6">
      <%= f.text_area :comments, class: 'form-control' %>
    </div>
  </div>

  <div class="col-sm-offset-2">
    <%= button_tag(f.object.new_record? ? "<i id='iconChange'class='fa fa-list-alt'> Add an Address (Optional)</i>".html_safe : "<i id='iconChange'class='fa fa-list-alt'> Update the Address</i>".html_safe,id:"add-comp-address-btn",type:'button',class: "btn btn-default btn-nofloat",title:'Click if you want to to add an address to this pharmacy') %>
  </div>

  <div id="add-comp-address">
    <div class="form-group">
        <%= f.label "Street Address", :street, class: "col-xs-12 col-sm-2 control-label"%>
      <div class="col-xs-8 col-sm-7">
        <%= f.text_area :street, class: 'form-control' %>
      </div>
    </div>

  </div>

 	<div class="form-group">
	  <div class="col-sm-offset-2 col-sm-9">
      <%= render 'layouts/submit', form_type: "Company", object: @company, f: f %>
    </div>
 	</div>

<% end %>