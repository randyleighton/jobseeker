<%= render 'layouts/errors', object: @company %>

<%= form_for(@company, html: { class: 'form-horizontal' }) do |f| %>

 <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
      <%= f.label :name, "Name", class: "col-sm-3 control-label"%>
    <div class="input-group col-xs-12 col-sm-6">
        <span class="input-group-addon"><i class="fa fa-building fa-fw form-fa"></i></span>
      <%= f.text_field :name, placeholder: "Enter the Company Name", :autofocus=>true, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
      <%= f.label :url, "Website", class: "col-sm-3 control-label"%>
    <div class="input-group col-xs-12 col-sm-6">
        <span class="input-group-addon"><i class="fa fa-globe fa-fw form-fa"></i></span>
      <%= f.text_field :url, placeholder: "Enter the website address",class: 'form-control' %>
    </div>
  </div>  

  <div class="form-group">
      <%= f.label :phone, "Phone Number", class: "col-sm-3 control-label"%>
    <div class="input-group col-xs-12 col-sm-6">
        <span class="input-group-addon"><i class="fa fa-phone fa-fw form-fa"></i></span>
      <%= f.text_field :phone, placeholder: "example: 408-456-1234", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :email, "Email", class: "col-sm-3 control-label"%>
    <div class="input-group col-xs-12 col-sm-6">
        <span class="input-group-addon"><i class="fa fa-envelope fa-fw form-fa"></i></span>
      <%= f.email_field :email, placeholder: "example: recruiting@company.com",class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :"comments", "Comments", class: "col-sm-3 control-label"%>
    <div class="input-group col-xs-12 col-sm-6">
        <span class="input-group-addon"><i class="fa fa-list fa-fw form-fa"></i></span>
      <%= f.text_area :comments, class: 'form-control' %>
    </div>
  </div>

  <div class="col-sm-offset-3">
    <%= button_tag(f.object.new_record? ? "<i id='iconChange'class='fa fa-list-alt'> Add an Address (Optional)</i>".html_safe : "<i id='iconChange'class='fa fa-list-alt'> Update the Address</i>".html_safe,id:"add-comp-address-btn",type:'button',class: "btn btn-default btn-nofloat",title:'Click if you want to to add an address to this company') %>
  </div>

  <div id="add-comp-address">
    <div class="form-group">
      <%= f.label :street, "Street Address", class: "col-xs-12 col-sm-3 control-label"%>
      <div class="input-group col-xs-12 col-sm-6">
        <span class="input-group-addon"><i class="fa fa-table fa-fw form-fa"></i></span>
        <%= f.text_field :street, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :city, "City", class: "col-xs-12 col-sm-3 control-label"%>
      <div class="input-group col-xs-12 col-sm-6">
        <span class="input-group-addon"><i class="fa fa-table fa-fw form-fa"></i></span>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
    </div>    
    <div class="form-group">
      <%= f.label :state, "State", class: "col-xs-12 col-sm-3 control-label"%>
      <div class="input-group col-xs-12 col-sm-6">
        <span class="input-group-addon"><i class="fa fa-table fa-fw form-fa"></i></span>
        <%= f.text_field :state, class: 'form-control' %>
      </div>
    </div>    
    <div class="form-group">
      <%= f.label :zip, "Zip Code", class: "col-xs-12 col-sm-3 control-label"%>
      <div class="input-group col-xs-12 col-sm-6">
        <span class="input-group-addon"><i class="fa fa-table fa-fw form-fa"></i></span>
        <%= f.text_field :zip, class: 'form-control' %>
      </div>
    </div>
  </div>

 	<div class="form-group">
	  <div class="col-sm-offset-3 col-sm-9">
      <%= render 'layouts/submit', form_type: "Company", object: @company, f: f %>
    </div>
 	</div>

<% end %>