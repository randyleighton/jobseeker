<%= render 'layouts/errors', object: @company %>

<%= form_for(@company, html: { class: 'form-horizontal' }) do |f| %>
 	<div class="form-group">
    	<%= f.label "Name", class: "col-sm-2"%>
    <div class="col-sm-6">
    	<%= f.text_field :name, :autofocus=>true, class: 'form-control' %>
   	</div>
  </div>
 	<div class="form-group">
    	<%= f.label "Website", class: "col-sm-2"%>
    <div class="col-sm-6">
    	<%= f.text_field :url, placeholder: "Enter the website address",class: 'form-control' %>
   	</div>
  </div> 	<div class="form-group">
    	<%= f.label :"Comments", class: "col-sm-2"%>
    <div class="col-sm-6">
    	<%= f.text_area :comments, class: 'form-control' %>
   	</div>
  </div>

 <%= f.hidden_field :user_id, value: current_user.id %>

 	<div class="form-group">
	  <div class="col-sm-offset-2 col-sm-9">
      <%= button_tag(type: "submit", class: "btn btn-default float-btn", title: f.object.new_record? ? "Create Company" : "Update Company") do %>
        <i class="fa fa-plus-circle fa-fw"></i>
        <%= f.object.new_record? ? "Create Company" : "Update Company" %>
      <% end %>
      <%= link_to "<i class='fa fa-arrow-circle-left fa-fw'></i> Cancel".html_safe, :back, class: "btn btn-default float-btn",title:"Cancel" %>
    </div>
 	</div>

<% end %>