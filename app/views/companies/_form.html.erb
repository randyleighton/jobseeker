<%= render 'layouts/errors', object: @company %>

<%= form_for(@company, html: { class: 'form-horizontal' }) do |f| %>
<% binding.pry %>
 	<div class="form-group">
    	<%= f.label "Name", class: "col-sm-2"%>
    <div class="col-sm-6">
    	<%= f.text_field :name, :autofocus=>true, class: 'form-control' %>
   	</div>
  </div>
 	<div class="form-group">
    	<%= f.label "Website", class: "col-sm-2"%>
    <div class="col-sm-6">
    	<%= f.text_field :url, class: 'form-control' %>
      <i>Do not enter the http://</i>
   	</div>
  </div> 	<div class="form-group">
    	<%= f.label :"Comments", class: "col-sm-2"%>
    <div class="col-sm-6">
    	<%= f.text_area :comments, class: 'form-control' %>
   	</div>
  </div>

 <%= f.hidden_field :user_id, :value => current_user.id %>

 	<div class="form-group">
	  <div class="col-sm-offset-2 col-sm-9">
			<%= f.submit(:class => "btn btn-default float-btn") %>
      <%= link_to "Cancel", :back, class: "btn btn-default float-btn" %>
    </div>
 	</div>

<% end %>