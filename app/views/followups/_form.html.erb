<%= render 'layouts/errors', object: @followup %>

<%= form_for ([@context,@followup]), html: { class: 'form-horizontal' } do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id  %>

  <div class="form-group">
    <%= f.label :action, "Action Taken", class: "col-xs-12 col-sm-3" %>
    <div class="input-group col-xs-12 col-sm-7">
      <span class="input-group-addon"><i class="fa fa-bolt fa-fw form-fa"></i></span>
      <%= f.text_field :action, class: "form-control", placeholder: "Enter a followup action here." %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :notes, "Notes", class: "col-xs-12 col-sm-3" %>
    <div class="input-group col-xs-12 col-sm-7">
      <span class="input-group-addon"><i class="fa fa-book fa-fw form-fa"></i></span>
      <%= f.text_area :notes, class: "form-control", placeholder: "Enter important notes about your action here." %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :action_date, "Action Date", class: "col-xs-12 col-sm-3" %>
    <div class="input-group col-xs-6 col-sm-6">
      <span class="input-group-addon"><i class="fa fa-calendar fa-fw form-fa"></i></span>
      <%= f.date_field :action_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-9">
      <%= render 'layouts/submit', form_type: "Followup", object: @followup, f: f %>
    </div>
  </div>

<% end %>