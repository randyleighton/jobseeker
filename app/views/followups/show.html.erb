<% content_for(:title, "Followups") %>

<ol class="breadcrumb">
  <li><%= link_to "Home", root_path %></li>
  <li><%= link_to "Company", company_path(@company) %></li>
  <li class="active"><i class="fa fa-hand-o-right"></i> Follow Up</li>
</ol>

<div class="row col-pads">
  <h3>Follow Up Details</h3>
  <p><b>Company: </b><%= link_to "#{@company.name}", company_path(@company) %></p>
  <p><b>Action Taken: </b><%= @followup.action %></p>
  <p><b>Action Date </b><%= l @followup.action_date, format: :long %></p>
  <p><b>Notes: </b><%= @followup.notes %></p>
</div>

<div class="margin-top row col-pads">
  
  <div class="show-edit-del">
    <%= link_to edit_company_followup_path(@company, @followup),title:"Edit Reminder Details" do %>
      <%= image_tag("edit.png") %>
      <p>Edit</p>
    <% end %>
  </div>
  <div class="show-edit-del">
    <%= link_to [@company,@followup], data: {method: :delete, confirm: "Are you sure you want to delete this followup action?" }, title: "Delete this followup action" do %>
      <%= image_tag("trash-holiday.png") %>
      <p>Delete</p>
    <% end %>
  </div>
  <div class="show-edit-del">
  <%= link_to company_path(@company), title:"Back" do %>
    <%= image_tag("navigation.png") %>
     <p>Back</p>
  <% end %>
  </div>

</div>